<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/course_itemLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/listview_background"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="6dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dip"
                android:layout_weight="0.4"
                android:maxLines="1"
                android:text="2011년도 수능기출"
                android:textSize="20dip"
                flatui:fl_textColor="main"
                flatui:fl_theme="@array/dark" />

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/tv_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dp"
                android:layout_weight="1.6"
                android:gravity="bottom|right"
                android:maxLines="1"
                android:text="100%"
                android:textSize="14sp"
                flatui:fl_textColor="main"
                flatui:fl_theme="@array/deep" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" >

            <ProgressBar
                android:id="@+id/mycourse_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:max="100"
                android:progressDrawable="@drawable/progress_horizontal_thick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3.5" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dip"
                android:layout_weight="1.4"
                android:orientation="vertical"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_step_test" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/ic_circle_green"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_circle_green" />

                    <com.cengalabs.flatui.views.FlatTextView
                        android:id="@+id/tv_word_size"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:gravity="bottom|left"
                        android:maxLines="1"
                        android:text="Word Item : 100"
                        android:textColor="@color/dark_light"
                        android:textSize="14dp"
                        flatui:fl_textColor="main"
                        flatui:fl_theme="@array/dark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/iv_circle_orange"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:paddingBottom="9dp"
                        android:src="@drawable/ic_circle_orange" />

                    <com.cengalabs.flatui.views.FlatTextView
                        android:id="@+id/tv_learn"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:gravity="top|left"
                        android:text="Word iGotIt : 100"
                        android:textColor="@color/dark_light"
                        android:textSize="14dp"
                        flatui:fl_textColor="main"
                        flatui:fl_theme="@array/dark" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:weightSum="1" >

                <com.cengalabs.flatui.views.FlatButton
                    android:id="@+id/btn_start"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="top|center_horizontal"
                    android:text="Start"
                    flatui:fl_textAppearance="light"
                    flatui:fl_theme="@array/orange" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>